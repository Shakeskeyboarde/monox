{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "out", "lib"]
}
