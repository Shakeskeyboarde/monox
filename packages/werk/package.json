{
  "name": "@werk/cli",
  "description": "An open-minded monorepo tool, with opinionated plugins.",
  "version": "2.0.1",
  "author": "Chris Ackerman <chris@topher.land>",
  "license": "ISC",
  "homepage": "https://github.com/Shakeskeyboarde/werk/blob/main/packages/werk/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shakeskeyboarde/werk.git",
    "directory": "packages/werk"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && chmod +x lib/bin.js"
  },
  "type": "module",
  "types": "./lib/exports.d.ts",
  "main": "./lib/exports.js",
  "exports": {
    "types": "./lib/exports.d.ts",
    "default": "./lib/exports.js"
  },
  "bin": {
    "werk": "./lib/bin.js"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "engineStrict": true,
  "files": [
    "CHANGELOG.md",
    "lib/**"
  ],
  "keywords": [
    "monorepo",
    "workspace",
    "workspaces",
    "command",
    "commander",
    "run",
    "exec",
    "script",
    "version",
    "publish",
    "npm",
    "git"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^11.0.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/semver": "^7.5.1",
    "@types/shell-quote": "^1.7.1",
    "ansi-regex": "^6.0.1",
    "async-sema": "^3.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "cross-spawn": "^7.0.3",
    "npm-run-path": "^5.1.0",
    "package-json-type": "^1.0.3",
    "semver": "^7.5.4",
    "shell-quote": "^1.8.1"
  }
}
