{
  "name": "wurk",
  "description": "Open-minded build tooling, with opinionated plugins.",
  "version": "0.1.5",
  "author": "Chris Ackerman <chris@topher.land>",
  "license": "ISC",
  "homepage": "https://github.com/Shakeskeyboarde/wurk/blob/main/core/wurk/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shakeskeyboarde/wurk.git",
    "directory": "core/wurk"
  },
  "scripts": {
    "build": "tsc -p src/tsconfig.json && chmod +x lib/bin.js"
  },
  "type": "module",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./main": {
      "types": "./lib/main.d.ts",
      "default": "./lib/main.js"
    }
  },
  "bin": {
    "wurk": "lib/bin.js"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "engineStrict": true,
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "keywords": [
    "monorepo",
    "workspace",
    "workspaces",
    "command",
    "commander",
    "run",
    "exec",
    "script",
    "version",
    "publish",
    "npm",
    "git",
    "task",
    "ci",
    "orchestrator"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@wurk/cli": "*",
    "@wurk/git": "*",
    "@wurk/json": "*",
    "@wurk/log": "*",
    "@wurk/pm": "*",
    "@wurk/spawn": "*",
    "@wurk/workspace": "*"
  }
}
