{
  "private": true,
  "name": "root",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "lint": "eslint 'packages/*/src/**/*.{js,cjs,ts,tsx}'",
    "build": "npm -ws --if-present run build && npm update --silent @werk/cli && werk build",
    "test": "npm run lint -- --max-warnings=0 && node_modules/.bin/werk vitest run",
    "clean": "rm -rf out **/out lib **/lib",
    "modernize": "npx npm-check-updates@latest -i --workspaces --root --format group",
    "start": "echo 'building...' && ( npm --quiet run build &>/dev/null || ( echo 'build failed' && exit 1 ) ) && echo 'starting...\\n' && werk"
  },
  "workspaces": [
    "packages/cli",
    "packages/*",
    "packages/test/*",
    "template"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=9",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "engineStrict": true,
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.4",
    "@types/eslint": "^8.44.3",
    "@types/node": "^20.7.1",
    "@vitest/coverage-v8": "^0.34.5",
    "@werk/command-build": "*",
    "@werk/command-exec": "*",
    "@werk/command-list": "*",
    "@werk/command-publish": "*",
    "@werk/command-run": "*",
    "@werk/command-version": "*",
    "@werk/command-vitest": "*",
    "eslint": "^8.50.0",
    "eslint-config-rational": "^3.0.9",
    "prettier": "^3.0.3",
    "rollup": "^3.29.4",
    "typescript": "^5.2.2",
    "vitest": "^0.34.5"
  },
  "werk": {
    "commands": {
      "a": "typescript",
      "b": "does-not-exist"
    }
  }
}
