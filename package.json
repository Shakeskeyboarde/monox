{
  "private": true,
  "name": "root",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "build": "npm -ws --if-present run build && npm update @werk/cli && werk -p tsc",
    "test": "npm run lint",
    "clean": "rm -rf out **/out lib **/lib",
    "modernize": "npx npm-check-updates@latest -i --workspaces --root --format group",
    "start": "( npm --quiet run build &>/dev/null || ( echo 'build failed' && exit 1 ) ) && werk"
  },
  "workspaces": [
    "packages/werk",
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=9",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "engineStrict": true,
  "devDependencies": {
    "@types/eslint": "^8.40.2",
    "@types/node": "^20.3.1",
    "eslint": "^8.43.0",
    "eslint-config-rational": "^2.0.23",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  }
}
