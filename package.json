{
  "private": true,
  "name": "root",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "lint": "eslint 'packages/*/src/**/*.{js,cjs,ts,tsx}'",
    "build": "npm -ws --if-present run build && npm update --silent @werk/cli && werk -p build",
    "test": "npm run lint -- --max-warnings=0 && node_modules/.bin/werk vitest run",
    "clean": "rm -rf out **/out lib **/lib",
    "modernize": "npx npm-check-updates@latest -i --workspaces --root --format group",
    "start": "( npm --quiet run build &>/dev/null || ( echo 'build failed' && exit 1 ) ) && werk"
  },
  "workspaces": [
    "packages/werk",
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=9",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "engineStrict": true,
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/eslint": "^8.44.2",
    "@types/node": "^20.5.7",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.48.0",
    "eslint-config-rational": "^3.0.8",
    "prettier": "^3.0.3",
    "rollup": "^3.28.1",
    "rollup-plugin-node-externals": "^6.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.3",
    "vite-plugin-full-reload": "^1.0.5",
    "vitest": "^0.34.3"
  }
}
