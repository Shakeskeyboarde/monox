{
  "private": true,
  "name": "root",
  "license": "ISC",
  "author": "Chris Ackerman <chris@topher.land>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shakeskeyboarde/werk"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint --max-warnings=0 .",
    "build": "npm -ws --if-present run build && npm update --silent @werk/cli && werk -p build",
    "test": "npm run lint && npm run build && werk depcheck && werk vitest run --no-build",
    "clean": "rm -rf out **/out lib **/lib",
    "modernize": "npx npm-check-updates@latest -i --workspaces --root --format group",
    "start": "echo 'building...' && ( npm --quiet run build &>/dev/null || ( echo 'build failed' && exit 1 ) ) && echo 'starting...\\n' && werk"
  },
  "workspaces": [
    "packages/cli",
    "packages/*",
    "packages/test/*",
    "template"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=9",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "engineStrict": true,
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/eslint": "^8.44.7",
    "@types/node": "^20.9.3",
    "@vitest/coverage-v8": "^0.34.6",
    "@werk/command-build": "*",
    "@werk/command-depcheck": "*",
    "@werk/command-exec": "*",
    "@werk/command-list": "*",
    "@werk/command-publish": "*",
    "@werk/command-run": "*",
    "@werk/command-version": "*",
    "@werk/command-vitest": "*",
    "eslint": "^8.54.0",
    "eslint-config-rational": "^3.0.9",
    "prettier": "^3.1.0",
    "rollup": "^4.5.1",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  },
  "werk": {
    "commands": {
      "a": "typescript",
      "b": "does-not-exist"
    }
  }
}
