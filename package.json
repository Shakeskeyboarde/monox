{
  "private": true,
  "name": "root",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "build": "npm -ws --if-present run build && npm update --silent @werk/cli && werk -p build",
    "test": "npm run lint",
    "clean": "rm -rf out **/out lib **/lib",
    "modernize": "npx npm-check-updates@latest -i --workspaces --root --format group",
    "start": "( npm --quiet run build &>/dev/null || ( echo 'build failed' && exit 1 ) ) && werk"
  },
  "workspaces": [
    "packages/werk",
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=9",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "engineStrict": true,
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/eslint": "^8.40.2",
    "@types/node": "^20.3.2",
    "@vitejs/plugin-react": "^4.0.1",
    "@vitest/coverage-v8": "^0.32.2",
    "eslint": "^8.43.0",
    "eslint-config-rational": "^2.0.23",
    "prettier": "^2.8.8",
    "rollup": "^3.25.3",
    "rollup-plugin-node-externals": "^6.1.1",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-full-reload": "^1.0.5",
    "vitest": "^0.32.2"
  }
}
